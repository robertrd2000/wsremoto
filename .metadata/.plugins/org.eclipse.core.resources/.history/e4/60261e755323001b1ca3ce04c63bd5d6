package decisao;

import javax.swing.JOptionPane;

public class DesafioSimples {

	public static void main(String[] args) {
	
		String nome = JOptionPane.showInputDialog("Digite Nome").toUpperCase();
		double idade = Double.parseDouble(JOptionPane.showInputDialog("Digite Idade"));
		
		if (idade > 70 || idade > 16 || idade > 17) {
			System.out.println(" Voto facultativo : Sua idade é: " + idade);
		}
		if (idade > 18 && idade < 70) {
			System.out.println(" Voto é obrigatório ");
		}
		if (idade < 16) {
			System.out.println(" Voto proibido ");
		}
		System.out.println(" Sua idade é : " + idade);
	}

}
