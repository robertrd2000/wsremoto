package repeticao;

import javax.swing.JOptionPane;

public class DesafioWhile {

	public static void main(String[] args) {
	
		int ano = Integer.parseInt(JOptionPane.showInputDialog("Digite Ano:"));
		int mes = Integer.parseInt(JOptionPane.showInputDialog("Digite Mês:"));
		int dia = Integer.parseInt(JOptionPane.showInputDialog("Digite Dia:"));
		
		while (ano>1900 && ano <2002) {
			ano = Integer.parseInt(JOptionPane.showInputDialog("Digite um ano entre 1900 e 2002 "));
		}

	}

}
